<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="48dp"
    android:maxHeight="84dp"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imbCheckbox"
        android:layout_width="18dp"
        android:layout_marginStart="17dp"
        android:layout_height="18dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/ic_unchecked" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/imbInfo"
        android:layout_toEndOf="@+id/imbCheckbox"
        android:minHeight="48dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLines="3"
            android:text="оль зуемый в печати и вэб-"
            android:textColor="@color/label_primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/label_tertiary"
            android:fontFamily="@font/roboto"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imbInfo"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal|end"
        android:src="@drawable/ic_info_outline"
        android:background="@color/back_secondary"/>
</RelativeLayout>